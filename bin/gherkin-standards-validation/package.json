{
  "name": "gherkin-standards-validation",
  "version": "1.0.0",
  "description": "Validates Gherkin feature files against BDD standards and best practices",
  "type": "module",
  "main": "index.js",
  "bin": {
    "gherkin-standards-validator": "./index.js"
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/.bin/jest --coverage",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix"
  },
  "keywords": [
    "gherkin",
    "bdd",
    "testing",
    "validation",
    "cucumber",
    "quality"
  ],
  "author": "DEFRA",
  "license": "ISC",
  "dependencies": {
    "glob": "^10.5.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.57.0"
  }
}
